{
    "compilerOptions": {
        /* 基础配置 */
        "target": "esnext",
        "lib": [
            "dom",
            "esnext"
        ],
        "removeComments": false,
        // 自动生成 .d.ts 文件，并配合package.json 里面的 types 字段读取
        "declaration": true,
        "declarationDir": "dist",
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "sourceMap": true,
        /* 强类型检查配置 */
        "strict": false,
        "noImplicitAny": false,
        /* 模块分析配置 */
        "baseUrl": ".",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ]
}
