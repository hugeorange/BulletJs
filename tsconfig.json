{
    "compilerOptions": {
        /* 基础配置 */
        "target": "esnext",
        "lib": [
            "dom",
            "esnext"
        ],
        "removeComments": false,
        "declaration": true,
        "sourceMap": true,
        /* 强类型检查配置 */
        "strict": false,
        "noImplicitAny": false,
        /* 模块分析配置 */
        "baseUrl": ".",
        "outDir": "./lib",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ]
}
